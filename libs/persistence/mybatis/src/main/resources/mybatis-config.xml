<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="configLocation" value="classpath:mybatis-internal-config.xml" />
        <property name="dataSource" ref="dataSource" />
        <property name="typeAliasesPackage" value="net.medvedmike.vsu.demo.personal.domain" />
        <property name="mapperLocations" value="classpath*:repository/**/*.xml" />
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="net.medvedmike.vsu.demo.repository"/>
    </bean>

</beans>